<Window x:Class="SmsService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmsService"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <Grid>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Number:" Foreground="BurlyWood" Margin="5"/>
            <TextBox Name="tb_number" Margin="5" Background="Bisque" MinWidth="150" Text="+380"/>
            <TextBlock Text="Message:" Foreground="Chocolate" Margin="5"/>
            <TextBox Name="tb_message" Margin="5" Background="LightBlue" MinWidth="150" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50"/>
            <Button Content="Send SMS" Margin="5" Background="DimGray" Foreground="White" Click="Button_SendSms_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
